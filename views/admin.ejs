    <section class="u-align-center u-clearfix u-valign-middle u-white u-section-2">
      <h4>Usuarios</h4>
        <div style="display: flex; justify-content: center;">
          <div class="mi-tabla">
          <table border="1" style="overflow-x: scroll; ">
            <thead></thead>
            <th><a href="/admin">ID</a></th>
              <th>Cédula</th>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th>Teléfono</th>
              <th> <a href="/adminArea">Área de interés</a></th>
              <th> <a href="/adminIns">Institución</a></th>
              <th><a href="/adminEstatus">Estatus</a></th>
              <th>Correo</th>
              <th>Carrera</th>
              <th>Guardar</th>
              <tbody>
                  <% usuarios.forEach((usuario) => { %>
                    <tr>
                      <td><%= usuario.id %></td>
                      <td><%= usuario.cedula %></td>
                      <td><%= usuario.nombres %></td>
                      <td><%= usuario.apellidos %></td>
                      <td><%= usuario.telefono %></td>
                      <td><%= usuario.areaInteres %></td>
              
                    
                   
                      <td>
                        <form id="myForm" action="/admin/institucion/<%=usuario.id%>" method="POST">
                        <select name="institución" id="institución">
                          <option value="No asignado" <% if (usuario.institución) { %> selected <% } %>>No asignado</option>
                          <% instituciones.forEach((institucion) => { %>
                            
                            <option  value="<%= institucion.nombre %>" <% if (usuario.institución === institucion.nombre ) { %> selected <% } %> ><%= institucion.nombre %></option>
                          <% }); %>
                        </select>
                      </td>
                      <td><%= usuario.status %></td>
                      <td><%= usuario.correo_usuario %></td>
                      <td><%= usuario.nombre_carrera %></td>
                      <td>
                        <button  class="u-btn  u-button-style u-block-e2d2-34" type="submit">Enviar</button>
                    </form></td>
                    </tr>
                  <% }); %>
              </tbody>
                </table>
              </div>
            </div>
            <h4>Instituciones</h4>
      
              <div class="mi-tabla" style="display: flex; justify-content: center;" >
                
                <table border="1"><thead>
                <th>ID</th>
              <th>Nombre</th>
              <th colspan="2">Opciones</th>
              </thead>
              <tbody>
                <% instituciones.forEach((institucion) => { %>
                    <tr>
                        <td><%= institucion.id %></td>
                        <form action="/admin/institucion/editar/<%= institucion.id %>" method="post">
                        <td><input type="text" name="nombre" id="nombre" value="<%= institucion.nombre %>"></td>
                        <td><button type="submit" class="u-btn u-button-style u-block-e2d2-34">Actualizar</button></form></td>
                        <td><form action="/admin/institucion/eliminar/<%= institucion.id %>" method="post"><button type="submit" class="u-btn u-button-style u-block-e2d2-34">Eliminar</button></form></td>
                    </tr>
                <% }); %>
                <tr>
                    <td></td>
                    <form action="/admin/institucion/crear" method="post">
                    <td><input type="text" name="nombre" id="nombre" required></td>
                    <td colspan="2"><div style="display: flex; justify-content: center;"><button  type="submit" class="u-btn u-button-style u-block-e2d2-34">Crear</button> </div></form></td>

                </tr>
            </tbody>
              </table></div>
              <h4>Carreras</h4>
              <div class="mi-tabla" style="display: flex; justify-content: center;">
              
                <table border="1"><thead>
                <th>ID</th>
              <th>Nombre</th>
              </thead>
              <tbody>
              <% carreras.forEach((carrera) => { %>
                       <td> <%= carrera.id %></td>     
                       <td><%= carrera.nombre %></td>
              <% }); %></tbody>
              </table></div>
                
  
